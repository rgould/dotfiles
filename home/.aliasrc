
# Shell stuff
alias a="ack"
alias c="cat"
alias copy="cat | pbcopy"
alias fuck='sudo $(history -p \!\!)'
alias k="kill"
alias less="vess"
alias more="vess"
alias p="ps aux"
alias top="htop"
alias v="vim"
alias vess="/usr/share/vim/vim73/macros/less.sh"

# Git aliases
alias gd="git diff"
alias gf="git fetch"
alias gh="open \"https://github.com/\$(current_repository | cut -f 1 -d .)\""
alias glog="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias gr="git reset"
alias grh="git reset HEAD~1"
alias grm="git rm"
alias wip="git add -A .;git commit -m 'wip'"
alias unwip="git reset HEAD~1"

# Ruby/Rails dev
alias b="bundle"
alias f="foreman start"
alias frun="foreman run bundle exec"
alias r="rails"
alias rc="foreman run rails c"
alias rg="foreman run rails g"
alias rk="foreman run rake"
alias rks="foreman run rake spec"
alias rs="rspec"
# Remove :focus from rspec files
alias unfocus="for file in \$(grep -irl ', :focus' spec) ; do sed -i '' 's/, :focus//' \$file; done"

# Meteor dev
alias m="if [ -f settings.json ] ; then meteor --settings settings.json; else meteor; fi"

# Web dev
alias h="heroku"
alias hc="heroku run rails console"
alias hconf="heroku config"
alias hao="heroku addons:open"
alias hr="heroku run"
alias sentry="heroku addons:open sentry"
alias logentries="heroku addons:open logentries"
alias -g RP="-r production"
alias -g RS="-r staging"

# Generic dev
alias p="pygmentize"
alias pat="pygmentize"

# Global aliases
alias -g G="| grep"
alias -g GI="| grep -i"
alias -g GV="| grep -v"
alias -g GIV="| grep -iv"
alias -g PB="| pbcopy"
